<Window x:Class="controlescolar.Administracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controlescolar"
        mc:Ignorable="d"
        Title="Administracion" Height="600" Width="950"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True">
    <Grid Background="#F5F5F5" RenderTransformOrigin="0.504,0.494">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#216b4a" Grid.Column="0">
            <TextBlock Text="Bievenido a Administracion" Foreground="White" FontSize="16" Margin="10"/>
            <Button Content="Agregar Empleado" Margin="10" Height="40" Click="BtnAgEmpleado_Click"/>
            <Button Content="Salario" Margin="10" Height="40" Click="BtnSalario_Click"/>
            <Button Content="Salir" Margin="10" Height="40" Click="BtnSalir_Click"/>
        </StackPanel>
        <Frame x:Name="AdmonFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="10,9,10,10"/>

    </Grid>
</Window>
