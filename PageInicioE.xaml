<Page x:Class="controlescolar.InicioE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InicioE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="203*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Padding="20" Grid.RowSpan="2">
            <StackPanel>
                <GroupBox Header="Identificación" Margin="0,10" Height="129" Width="740">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Ellipse Width="80" Height="80" Fill="#0D2D62" Grid.Column="0"
                                     HorizontalAlignment="Center" VerticalAlignment="Top"/>

                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="Datos del alumno de la carrera" FontWeight="Bold" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <Expander Header="Datos personales" IsExpanded="False" Margin="0,10">

                    <TextBlock Text="Aqui aparezcan los datos generales del alumno? mas personales" Margin="10"/>
                </Expander>

                <Expander Header="Información de carga académica" IsExpanded="False" Margin="0,10">
                    <TextBlock Text="Ps aqui lo de cuando elegir materias(?" Margin="10"/>
                </Expander>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
