<Page x:Class="controlescolar.PageAgAlumnos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAgAlumnos">

          <StackPanel Grid.Column="1" Margin="10" Background="#F9FAFB">
        <TextBlock Text="Datos Empleado" FontWeight="Bold" FontSize="16" Margin="10"/>
        <DataGrid x:Name="DatosEmpleado" AutoGenerateColumns="False" Height="200" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="NumeroControl" Binding="{Binding NoControl}" Width="100"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Genero" Binding="{Binding Genero}" Width="80"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="100"/>
                <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <WrapPanel Tag="Form" Name="FormAdd" Margin="10">
            <StackPanel Margin="5">
                <TextBlock Text="Nombre"/>
                <TextBox Tag="Nombre" x:Name="txtControl" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Apellido Paterno"/>
                <TextBox Tag="ApellidoP"  Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Apellido Materno"/>
                <TextBox Tag="ApellidoM" x:Name="txtTelefono" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Fecha de nacimiento"/>
                <TextBox Tag="FechaNac" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="CURP"/>
                <TextBox Tag="Curp" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Sexo"/>
                <ComboBox Tag="Sexo" Width="150">
                    <ComboBoxItem Content="Hombre"/>
                    <ComboBoxItem Content="Mujer"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Correo"/>
                <TextBox Tag="Correo" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Correo Institucional"/>
                <TextBox Tag="CorreoInst" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Telefono"/>
                <TextBox Tag="Tel"  Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Direccion"/>
                <TextBox Tag="Direccion" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Nombre(s) del Padre"/>
                <TextBox Tag="NombrePadre" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Apellido(s) del Padre"/>
                <TextBox Tag="ApellidoPadre" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Nombre(s) de la Madre"/>
                <TextBox Tag="NombreMadre" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Apellido(s) de la Madre"/>
                <TextBox Tag="ApellidoMadre" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Carrera"/>
                <ComboBox Tag="Carrera" Width="150">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                </ComboBox>
            </StackPanel>
        </WrapPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Anadir" Click="Button_Add" Width="100" Margin="5" />
            <Button Content="Actualizar" Width="100" Margin="5"/>
            <Button Content="Eliminar" Width="100" Margin="5"/>
            <Button Content="Limpiar" Width="100" Margin="5" Click="BtnLimpiar_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
