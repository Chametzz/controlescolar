<Page x:Class="Docentes_pantalla.PageInicioDo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Docentes_pantalla"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageInicioDo" Background="#F9FAFB ">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFE8F5E9" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="{Binding Nombre}" FontSize="20" FontWeight="Bold" Foreground="#FF1B5E20"/>
                    <TextBlock Text="{Binding Materias}" FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Correo}" FontSize="14" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Horario}" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" Margin="0,20,0,0" AutoGenerateColumns="False"
                  ItemsSource="{Binding Grupos}" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Grupo" Binding="{Binding CodigoGrupo}" Width="*"/>
                <DataGridTextColumn Header="Materia" Binding="{Binding NombreMateria}" Width="2*"/>
                <DataGridTextColumn Header="Horario" Binding="{Binding Horario}" Width="*"/>
                <DataGridTextColumn Header="Alumnos" Binding="{Binding NumAlumnos}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
