<Page x:Class="controlescolar.PageCargaMateria"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageTickets"
      Background="White">

    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" Width="250">
            <Ellipse Width="60" Height="60" Fill="#216b4a" HorizontalAlignment="Center"/>
            <TextBlock Text="Usuario" Margin="0,10,0,0" FontSize="14" />
            <TextBox Width="200" Margin="0,0,0,10" Padding="5"/>
            <TextBlock Text="Contrasena" />
            <PasswordBox Width="200" Margin="0,0,0,10" Padding="5"/>
            <CheckBox Content="Recordarme" Margin="0,10,0,0"/>
            <TextBlock Text="Olvide mi cotrasena" Foreground="#2196F3" HorizontalAlignment="Right" FontSize="12"/>
            <Button Content="LOGIN" Background="#216b4a" Foreground="White" Margin="0,20,0,0" Height="40"/>
        </StackPanel>
    </Grid>
</Page>
