<Page x:Class="controlescolar.PageHorario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      Height="942"  Width="1250"
      Title="PageHorario"
      Background="White">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.5,0.5" Margin="8,4,0,-1">
        <ScrollViewer.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.219"/>
                <TranslateTransform/>
            </TransformGroup>
        </ScrollViewer.RenderTransform>
        <StackPanel Margin="20" Height="881" Width="1222">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock FontSize="20" FontWeight="Bold" Text="🗓️ Horario Semestral"/>
            </StackPanel>

            <DataGrid x:Name="MatrizHorarios" Tag="MatrizHorarios" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="100"/>
                    <DataGridTextColumn Header="Materia" Binding="{Binding Materia}" Width="200"/>
                    <DataGridTextColumn Header="Docente" Binding="{Binding Docente}" Width="200"/>
                    <DataGridTextColumn Header="Créditos" Binding="{Binding Creditos}" Width="80"/>

                    <DataGridCheckBoxColumn Header="Lun" Binding="{Binding Lun}" />
                    <DataGridCheckBoxColumn Header="Mar" Binding="{Binding Mar}" />
                    <DataGridCheckBoxColumn Header="Mie" Binding="{Binding Mie}" />
                    <DataGridCheckBoxColumn Header="Jue" Binding="{Binding Jue}" />
                    <DataGridCheckBoxColumn Header="Vie" Binding="{Binding Vie}" />
                    <DataGridCheckBoxColumn Header="Sab" Binding="{Binding Sab}" />
                    <DataGridCheckBoxColumn Header="Dom" Binding="{Binding Dom}" />
                </DataGrid.Columns>
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>

                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Background" Value="#E0F2FE"/>
                        <Setter Property="Foreground" Value="#1E3A8A"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#93C5FD"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.Resources>
           
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
