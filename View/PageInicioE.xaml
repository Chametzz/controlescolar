<Page x:Class="controlescolar.InicioE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d"
      Title="InicioE"
      Background="White" Height="692" Width="791">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="203*"/>
        </Grid.RowDefinitions> 
        <ScrollViewer Padding="20" Grid.RowSpan="2">
            <StackPanel>
                <GroupBox Header="Identificación" Margin="0,10" Height="129" Width="740">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Recursos/logo-controlescolar.jpeg" Width="80" Height="80"/>

                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBox x:Name="datosAlumno" Tag="TxtDatoAlCarrera" Text="Datos del alumno de la carrera" FontWeight="Bold" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <Expander Header="Datos personales" IsExpanded="False" Margin="0,10">

                    <TextBlock x:Name="datosPersonales" Tag="TxtDatosAlPe" Text="Aqui aparezcan los datos generales del alumno? mas personales" Margin="10"/>
                </Expander>

                <Expander Header="Información de carga académica" IsExpanded="False" Margin="0,10">
                    <TextBlock Text="Ps aqui lo de cuando elegir materias(?" Margin="10"/>
                </Expander>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
