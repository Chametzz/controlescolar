<Page x:Class="controlescolar.InicioE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d"
      Title="InicioE"
      Tag="PageInicioEstudiante"
      Background="White" Height="692" Width="791">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="203*"/>
        </Grid.RowDefinitions> 
        <ScrollViewer Padding="20" Grid.RowSpan="2">
            <StackPanel Tag="AlumnoPanel: {AlumnoPanel}" >
                <GroupBox Header="Identificación" Margin="0,10" Height="348" Width="740">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Recursos/logo-controlescolar.jpeg" Width="80" Height="80"/>

                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBox x:Name="Nombre" Tag="Nombre: {Nombre}"  FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="ApellidoP" Tag="ApellidoP: {ApellidoP}" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="ApellidoM" Tag="ApellidoM: {ApellidoM}"  FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="FechaNac" Tag="FechaNac: {FechaNac}"  FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="Curp" Tag="Curp: {Curp}" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="CorreoInst" Tag="CorreoInst: {CorreoInst}" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="Semestre" Tag="Semestre: {Semestre}"  FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="FechaIng" Tag="FechaIng: {FechaIng}"  FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="Estado" Tag="Estado: {Estado}"  FontWeight="Bold" FontSize="14"/>

                        </StackPanel>
                    </Grid>
                </GroupBox>

                <Expander Header="Datos personales" IsExpanded="False" Margin="0,10">

                    <TextBlock x:Name="datosPersonales" Tag="TxtDatosAlPe" Text="Aqui aparezcan los datos generales del alumno? mas personales" Margin="10"/>
                </Expander>

                <Expander Header="Información de carga académica" IsExpanded="False" Margin="0,10">
                    <TextBlock Text="Ps aqui lo de cuando elegir materias(?" Margin="10"/>
                </Expander>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
