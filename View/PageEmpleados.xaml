<Page x:Class="controlescolar.PageEmpleados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEmpleados">

    <Grid Grid.Column="1" Margin="10" Background="#F9FAFB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Text="EmpleadoID:"/>
            <TextBox x:Name="txtEmpleadoId" Margin="0,5"/>

            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="txtNombre" Margin="0,5"/>

            <TextBlock Text="Posicion:"/>
            <TextBox x:Name="txtPosicion" Margin="0,5"/>

            <TextBlock Text="Salario:"/>
            <TextBox x:Name="txtSalario" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="Actualizar" Width="100" Margin="5"/>
                <Button Content="Limpiar" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="EmployeeGrid" Grid.Column="1" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="EmpleadoID" Binding="{Binding Empleadoid}"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                <DataGridTextColumn Header="Genero" Binding="{Binding Genero}"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}"/>
                <DataGridTextColumn Header="Posicion" Binding="{Binding Posicion}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
