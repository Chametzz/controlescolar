<Window x:Class="controlescolar.LoginProf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controlescolar"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanMinimize"
        Title="LoginProfesores" Height="450" Width="800">

    <Grid>

        <Border Background="#2E7D32" Height="80" VerticalAlignment="Top" />

        <Button Content="Regresar"
                Width="100" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,90,10,0"
                Click="BtnSalir_Click"
                Background="#C62828"
                Foreground="White"
                FontWeight="Bold"/>

        <StackPanel Tag="Form" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <Ellipse x:Name="LogoLog" Width="60" Height="60" Fill="#216b4a" HorizontalAlignment="Center"/>
            <TextBlock Text="Usuario" Tag="Usuario" Margin="0,10,0,0" FontSize="14" />
            <TextBox Tag="user" x:Name="NombreLog" Width="200" Margin="0,0,0,10" Padding="5"/>
            <TextBlock Text="Contraseña"/>
            <PasswordBox Tag="pass" x:Name="ContrasenaLog" Width="200" Margin="0,0,0,10" Padding="5"/>
            <CheckBox x:Name="RecordarLog" Tag="CbRecordar" Content="Recordarme" Margin="0,10,0,0"/>
            <TextBlock Text="Olvide mi contraseña" Foreground="#2196F3" HorizontalAlignment="Right" FontSize="12"/>
            <Button x:Name="BtnLog" Tag="BtnLoginProf" Content="LOGIN" Background="#216b4a" Foreground="White" Margin="0,20,0,0" Height="40" Click="ButtonLogprof_Click"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                <Image Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBlock Text="BIENVENIDO DOCENTE" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"
                           FontFamily="Arial"/>
            </StackPanel>
    </Grid>
</Window>
