<Page x:Class="controlescolar.PageRecibos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageTickets"
      Background="White">

     <StackPanel Margin="30">
            <TextBlock Text="Trámites escolares" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <Border BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#226b4a" Margin="0">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Descripción" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Importe" FontWeight="Bold" Grid.Column="1" Margin="98,0" Foreground="#FFFFFF"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="1">

                        <Grid Margin="1" Background="#94c081" Height="40" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Tarjeta De Estudiante" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Text="$100.00" Grid.Column="1" Margin="20,0" VerticalAlignment="Center"/>
                            <Button Content="SOLICITAR" Grid.Column="2" Background="#74ae59" Foreground="#FFFFFF" Margin="10,0" Padding="5,2"/>
                        </Grid>

                        <Grid Margin="1" Background="#74ae59" Height="40" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Constancia De Estudio" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Text="$50.00" Grid.Column="1" Margin="20,0" VerticalAlignment="Center"/>
                            <Button Content="SOLICITAR" Grid.Column="2" Background="#94c081" Foreground="#FFFFFF" Margin="10,0" Padding="5,2"/>
                        </Grid>

                        <Grid Margin="1" Background="#94c081" Height="40" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Certificado De Estudios Egreso" VerticalAlignment="Center" Margin="10,0"/>
                            <TextBlock Text="$200.00" Grid.Column="1" Margin="20,0" VerticalAlignment="Center"/>
                            <Button Content="SOLICITAR" Grid.Column="2" Background="#74ae59" Foreground="#FFFFFF" Margin="10,0" Padding="5,2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
</Page>