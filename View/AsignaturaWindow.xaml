<Window x:Class="controlescolar.View.AsignaturasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Asignaturas" Height="400" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulario de alta de asignatura -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="NombreBox" Width="120" Margin="0,0,10,0" PlaceholderText="Nombre"/>
            <TextBox x:Name="ClaveBox" Width="80" Margin="0,0,10,0" PlaceholderText="Clave"/>
            <TextBox x:Name="CreditosBox" Width="60" Margin="0,0,10,0" PlaceholderText="Créditos"/>
            <TextBox x:Name="CarreraBox" Width="60" Margin="0,0,10,0" PlaceholderText="Id Carrera"/>
            <TextBox x:Name="SemestreBox" Width="110" Margin="0,0,10,0" PlaceholderText="Semestre Sugerido"/>
            <TextBox x:Name="TipoBox" Width="100" Margin="0,0,10,0" PlaceholderText="Tipo Materia"/>
            <Button Content="Agregar" Width="80" Click="Agregar_Click"/>
        </StackPanel>

        <!-- Lista de asignaturas -->
        <DataGrid x:Name="AsignaturasGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id_Asignatura}" Width="40"/>
                <DataGridTextColumn Header="Carrera" Binding="{Binding Id_Carrera}" Width="60"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Clave" Binding="{Binding ClaveMateria}" Width="80"/>
                <DataGridTextColumn Header="Créditos" Binding="{Binding Creditos}" Width="60"/>
                <DataGridTextColumn Header="Semestre" Binding="{Binding SemestreSugerido}" Width="100"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoMateria}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>