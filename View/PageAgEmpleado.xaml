                    <TextBlock Text="CURP"/>
                    <TextBox x:Name="txtCurp" Tag="Curp" Width="150" TextChanged="FiltroCampos_Changed"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Sexo"/>
                    <ComboBox x:Name="cbSexo" Tag="Sexo" Width="150" SelectionChanged="FiltroCampos_Changed">
                        <ComboBoxItem Content="Hombre"/>
                        <ComboBoxItem Content="Mujer"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Correo"/>
                    <TextBox x:Name="txtCorreo" Tag="Correo" Width="150" TextChanged="FiltroCampos_Changed"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Correo Corporativo"/>
                    <TextBox x:Name="txtCorreoCo" Tag="CorreoCorp" Width="150" TextChanged="FiltroCampos_Changed"/>
