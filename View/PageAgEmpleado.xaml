<Page x:Class="controlescolar.PageAgEmpleado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAgEmpleado">

    <StackPanel x:Name="FormAdd" Grid.Column="1" Margin="10" Background="#F9FAFB">
        <TextBlock Text="Datos Empleado" FontWeight="Bold" FontSize="16" Margin="10"/>
        
        <DataGrid x:Name="DatosEmpleado" AutoGenerateColumns="False" Height="200" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Empleado Cedula" Binding="{Binding Empleado}" Width="100"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Genero" Binding="{Binding Genero}" Width="80"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="100"/>
                <DataGridTextColumn Header="Posicion" Binding="{Binding Posicion}" Width="150"/>
                <DataGridTextColumn Header="Salario" Binding="{Binding Salario}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <WrapPanel Tag="Form" Margin="10">
            <StackPanel Margin="5">
                <TextBlock Text="Nombre"/>
                <TextBox x:Name="txtNombre" Tag="Nombre" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Apellido"/>
                <TextBox x:Name="txtApellido" Tag="Apellido" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Fecha de Nacimiento"/>
                <TextBox x:Name="txtFechaNac" Tag="FechaNac" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="CURP"/>
                <TextBox x:Name="txtCurp" Tag="Curp" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Sexo"/>
                <ComboBox x:Name="cbSexo" Tag="Sexo" Width="150">
                    <ComboBoxItem Content="Hombre"/>
                    <ComboBoxItem Content="Mujer"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Correo"/>
                <TextBox x:Name="txtCorreo" Tag="Correo" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Correo Corporativo"/>
                <TextBox x:Name="txtCorreoCo" Tag="CorreoCorp" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Teléfono"/>
                <TextBox x:Name="txtTelef" Tag="Tel" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Dirección"/>
                <TextBox x:Name="txtDireccion" Tag="Direccion" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Fecha de Ingreso"/>
                <TextBox x:Name="txtFechaIng" Tag="FechaIng" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Puesto"/>
                <ComboBox x:Name="cbPuesto" Width="150" Tag="Puesto">
                    <ComboBoxItem Content="Jefe de departamento"/>
                    <ComboBoxItem Content="Docente"/>
                    <ComboBoxItem Content="Personal de Administracion"/>
                    <ComboBoxItem Content="Personal de Mantenimiento"/>
                    <ComboBoxItem Content="Personal de Limpieza"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Estado"/>
                <TextBox x:Name="txtEstado" Tag="Estado" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Contrato"/>
                <TextBox x:Name="txtContrato" Tag="Contrato" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Contraseña"/>
                <PasswordBox x:Name="txtContrasena" Tag="Contrasena" Width="150"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Departamento (ID)"/>
                <TextBox x:Name="txtDepartamento" Tag="Departamento" Width="150"/>
            </StackPanel>
        </WrapPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Añadir" Click="Button_Add" Width="100" Margin="5"/>
            <Button Content="Actualizar" Width="100" Margin="5"/>
            <Button Content="Eliminar" Width="100" Margin="5"/>
            <Button Content="Limpiar" Width="100" Margin="5" Click="BtnLimpiar_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
