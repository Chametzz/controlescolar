                    <DataGridTextColumn Header="Sexo" Binding="{Binding Sexo}" Width="80"/>
                    <DataGridTextColumn Header="CURP" Binding="{Binding Curp}" Width="150"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="150"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Tel}" Width="100"/>
                    <DataGridTextColumn Header="Puesto" Binding="{Binding Puesto}" Width="120"/>
                    <DataGridTextColumn Header="Contrato" Binding="{Binding Contrato}" Width="100"/>
                    <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Formulario para agregar/editar empleados -->
            <WrapPanel Tag="Form" Margin="10">
                <StackPanel Margin="5">
                    <TextBlock Text="Nombre"/>
