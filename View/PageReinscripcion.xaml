<Page x:Class="controlescolar.PageReinscripcion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReinscripcion"
      Background="White">

                <StackPanel x:Name="FormAdd" Grid.Column="1" Margin="10" Background="#F9FAFB">
                    <TextBlock Text="Reinscripción de Alumno"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <Label Content="Matrícula" Tag="Matricula {MAT}"/>
                    <TextBox x:Name="txtMatricula"/>

                    <Label Content="Nombre Completo" Tag="Alumno {Name}"/>
                    <TextBox x:Name="txtNombre"/>

                    <Label Content="Carrera" Tag="Carrera {Carrera}"/>
                    <ComboBox x:Name="cmbCarrera">
                        <ComboBoxItem Content="Ingeniería en Sistemas"/>
                        <ComboBoxItem Content="Contaduría"/>
                        <ComboBoxItem Content="Administración"/>
                    </ComboBox>

                    <Label Content="Semestre"/>
                    <ComboBox x:Name="cmbSemestre">
                        <ComboBoxItem Content="1" Tag="Sem1: {Semestre 1}"/>
                        <ComboBoxItem Content="2" Tag="Sem2: {Semestre 2}"/>
                        <ComboBoxItem Content="3" Tag="Sem3: {Semestre 3}"/>
                        <ComboBoxItem Content="4" Tag="Sem4: {Semestre 4}"/>
                        <ComboBoxItem Content="5" Tag="Sem5: {Semestre 5}"/>
                        <ComboBoxItem Content="6" Tag="Sem6: {Semestre 6}"/>
                        <ComboBoxItem Content="7" Tag="Sem7: {Semestre 7}"/>
                        <ComboBoxItem Content="8" Tag="Sem8: {Semestre 8}"/>
                        <ComboBoxItem Content="9" Tag="Sem9: {Semestre 9}"/>
                        <ComboBoxItem Content="10" Tag="Sem10: {Semestre 10}"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Reinscribir" Width="100" Margin="5" Click="BtnReinscribir_Click"/>
                        <Button Content="Cancelar" Width="100" Margin="5" Click="Btnlimpiar_Click"/>
                    </StackPanel>
                </StackPanel>
</Page>