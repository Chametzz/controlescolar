<Page x:Class="controlescolar.PageCalificaciones"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCalificaciones">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Background="#F9FAFB">

            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0 0 0 20" Background="White">
                <StackPanel>
                    <TextBlock Text=" Impresión de boleta" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <StackPanel Width="300">
                         <TextBlock Text="Período" FontWeight="SemiBold"/>
                        <ComboBox x:Name="PeriodoCombo" Tag="periodo" Margin="0 5 0 0">
                          <ComboBoxItem IsSelected="True" IsEnabled="False" Content="Seleccione periodo"/>
                            <ComboBoxItem Content="Febrero-Junio/2024"/>
                            <ComboBoxItem Content="Agosto-Diciembre/2024"/>
                            <ComboBoxItem Content="Enero-Junio/2025"/>
                          </ComboBox>
                        </StackPanel>
                        <Button x:Name="descargarBoleta" Content="DESCARGAR BOLETA" Margin="20 25 0 0" Padding="10 5"
                            HorizontalAlignment="Left" Background="#216b4a" Foreground="White"
                            Click="DescargarBoleta_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0 0 0 20" Background="White">
                <StackPanel>
                    <TextBlock Text=" Calificaciones" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                    <Expander Header="CONTA" IsExpanded="True" Background="#F0F0F0" FontWeight="Bold">
                        <StackPanel Margin="10">
                            <TextBlock FontWeight="Bold" FontSize="14" Text="Datos Generales" Margin="0,10,0,5"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Materia: ....." />
                                <TextBlock Grid.Column="1" Text="Docente: CHAT" />
                                <TextBlock Grid.Column="0" Text="Créditos: ?" Margin="0,20,0,0"/>
                                <TextBlock Grid.Column="1" Text="Grupo: .... | Clave: ....." Margin="0,20,0,0"/>
                            </Grid>

                            <TextBlock FontWeight="Bold" FontSize="14" Text=" Horario" Margin="0,10,0,5"/>
                            <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Lun" Binding="{Binding Lun}" />
                                    <DataGridTextColumn Header="Mar" Binding="{Binding Mar}" />
                                    <DataGridTextColumn Header="Mie" Binding="{Binding Mie}" />
                                    <DataGridTextColumn Header="Jue" Binding="{Binding Jue}" />
                                    <DataGridTextColumn Header="Vie" Binding="{Binding Vie}" />
                                    <DataGridTextColumn Header="Sab" Binding="{Binding Sab}" />
                                    <DataGridTextColumn Header="Dom" Binding="{Binding Dom}" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock FontWeight="Bold" FontSize="14" Text="Calificaciones" Margin="0,10,0,5"/>
                            <UniformGrid Columns="7" Margin="0,5,0,0">
                                <StackPanel>
                                    <TextBlock Text="U01" HorizontalAlignment="Center"/>
                                    <Border Background="#659597" CornerRadius="15" Padding="5" Margin="5">
                                        <TextBlock Text="100 - REG" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="U02" HorizontalAlignment="Center"/>
                                    <Border Background="#C33053" CornerRadius="15" Padding="5" Margin="5">
                                        <TextBlock Text="0 - REG" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="U03" HorizontalAlignment="Center"/>
                                    <Border Background="#659597" CornerRadius="15" Padding="5" Margin="5">
                                        <TextBlock Text="100 - REG" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="U04" HorizontalAlignment="Center"/>
                                    <Border Background="#DDD" CornerRadius="15" Padding="5" Margin="5">
                                        <TextBlock Text="0 - NC" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="U05" HorizontalAlignment="Center"/>
                                    <Border Background="#DDD" CornerRadius="15" Padding="5" Margin="5">
                                        <TextBlock Text="0 - NC" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Final" HorizontalAlignment="Center"/>
                                    <Border Background="#DDD" CornerRadius="15" Padding="5" Margin="5">
                                        <TextBlock Text="0 - NC" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </UniformGrid>
                        </StackPanel>
                    </Expander>

                    <Expander Header="............."/>
                    <Expander Header="..................."/>
                    <Expander Header=".................."/>
                    <Expander Header="............"/>
                    <Expander Header="..................."/>
                </StackPanel>
            </Border>

            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="15" Background="White">
                <StackPanel>
                    <TextBlock Text="Actividades complementarias" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                    <Expander Header="ROBLOX"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
