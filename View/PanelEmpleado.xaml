<Window x:Class="controlescolar.View.PanelEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controlescolar.View"
        mc:Ignorable="d"
        Title="PanelEmpleado" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="ImageBrush" ImageSource="pack://application:,,,/View/IconPanelEmpleado/usuario.png" Stretch="UniformToFill"/>
        <ImageBrush x:Key="ImageBrushClose" ImageSource="pack://application:,,,/View/IconPanelEmpleado/marca-x.png" Stretch="UniformToFill"/>

        <Style x:Key="TransparentStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderThickness="0" BorderBrush="Transparent" Background="{TemplateBinding Background}" Width="40" Height="40" CornerRadius="20">
                            <Border x:Name="Seletion" Background="Transparent" Width="40" Height="40" CornerRadius="20"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="CornerRadius" Value="20" TargetName="border"/>
                                <Setter Property="Background" Value="#FFB0C4DE" TargetName="Seletion"/>
                                <Setter Property="Opacity" Value="0.3" TargetName="Seletion"/>
                                <Setter Property="Background" Value="{DynamicResource ImageBrush}" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>




        </Style>

        <Style x:Key="CloseButton" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Estilo" BorderThickness="0" BorderBrush="Transparent" Background="{TemplateBinding Background}" Width="40" Height="40" CornerRadius="20">
                            <Border x:Name="Seleccion" Background="Transparent" Width="40" Height="40" CornerRadius="20"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="CornerRadius" Value="20" TargetName="Estilo"/>
                                <Setter Property="Background" Value="#FFB0C4DE" TargetName="Seleccion"/>
                                <Setter Property="Opacity" Value="0.3" TargetName="Seleccion"/>
                                <Setter Property="Background" Value="{DynamicResource ImageBrushClose}" TargetName="Estilo"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PopudStyle"
           TargetType="Popup">

            <Setter Property="AllowsTransparency" Value="True"/>

            <Setter Property="VerticalOffset" Value="100"/>

            <Setter Property="HorizontalAlignment" Value="Center"/>

            <Setter Property="Height" Value="35"/>

            <Setter Property="Placement" Value="Top"/>
        </Style>

        <Style x:Key="border"
           TargetType="Border">

            <Setter Property="Height" Value="27"/>
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Top"/>

        </Style>

        <Style x:Key="PopupText"
           TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ToolTip" x:Key="PropertiesToolTip">

            <Setter Property="Placement" Value="Right"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#4A5668"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Fonts/Roboto-Light.ttf #Roboto"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="PlacementRectangle" Value="60,0,0,0"/>
            <Setter Property="HorizontalOffset" Value="15"/>
            <Setter Property="VerticalOffset" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border  x:Name="border" 
                         BorderThickness="0"
                         Background="Transparent"
                         SnapsToDevicePixels="True" Width="40" Height="40" Margin="-6,0,0,0">
                            <Grid x:Name="rectangles">
                                <Rectangle Width="28" Height="4" Stroke="Black" StrokeThickness="5" Margin="0,0,0,18"/>
                                <Rectangle Width="28" Height="4" Stroke="Black" StrokeThickness="5" HorizontalAlignment="Center"/>
                                <Rectangle Width="28" Height="4" Stroke="Black" StrokeThickness="5" Margin="0,18,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="Background" Value="#FFB0C4DE"/>
                                <Setter TargetName="border" Property="CornerRadius" Value="25"/>
                            </Trigger>
                            <!--<Trigger Property="IsChecked" Value="true">
                            </Trigger>-->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid>
        <Grid>
            <!-- Panel Principal -->
            <Grid Background="#D5DEEF">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="126*"/>
                    <ColumnDefinition Width="650"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.ColumnSpan="2" Background="#005187" >
                    <TextBlock Text="Bienvenido:" FontSize="25" FontFamily="Arial Black"  Foreground="#F0F3FA" Margin="50,12,0,0"/>
                    <TextBlock  FontSize="18" FontFamily="Arial Black"  Foreground="#F0F3FA" Margin="220,18,0,0" x:Name="NameUser"/>
                    <Button Height="40" Width="40" HorizontalAlignment="Right" Margin="0,0,18,0" BorderThickness="0"
                    Style="{StaticResource TransparentStyle}" x:Name="BtnDatos" Click="BtnDatos_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="pack://application:,,,/View/IconPanelEmpleado/usuario.png" Stretch="UniformToFill"/>
                        </Button.Background>

                        <Popup Width="150" HorizontalOffset="-30" PlacementTarget="{Binding ElementName=BtnDatos}" IsOpen="{Binding ElementName=BtnDatos,Path=IsMouseOver,Mode=OneWay}"
                       Style="{StaticResource PopudStyle}">
                            <Grid>
                                <Border Style="{StaticResource border}">
                                    <TextBlock Text="Datos Personales" Style="{StaticResource PopupText}"/>
                                </Border>
                            </Grid>
                        </Popup>
                    </Button>
                </Grid>
            </Grid>
            
            <!-- Panel de Navegacion Lateral -->
            <Grid x:Name="NavPanel" HorizontalAlignment="Left" Width="65" Background="#F0F3FA" Margin="0,60,0,0">
                <StackPanel x:Name="st_pnl">
                    <Grid Height="90">
                        <TextBlock  Grid.Row="1"
            Grid.Column="0"
            Margin="73,-20,0,0"
            Text="Mas Opciones"
            Foreground="#005187"
            FontSize="22"
            Background="Transparent"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect  BlurRadius="10"
                           ShadowDepth="1"
                           Direction="-90"
                           Color="White"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ToggleButton x:Name="Tg_Btn"
               Grid.Column="0"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="10,-20,0,0"
               Height="40"
               Width="40"
               BorderThickness="0" Style="{StaticResource tb_style}">

                            <!--// Toggle button default background image //-->
                            <ToggleButton.Background>
                                <ImageBrush ImageSource="pack://application:,,,/View/IconPanelEmpleado/menu-hamburguesa.png"/>
                            </ToggleButton.Background>
                            <!--// Toggle Button - Checked, Unchecked events //-->
                            <ToggleButton.Triggers>
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HideStackPanel">
                                            <DoubleAnimation    
                         Storyboard.TargetName="NavPanel"
                         Storyboard.TargetProperty="Width"
                         BeginTime="0:0:0"
                         From="230" To="65"
                         Duration="0:0:0.2">
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>

                                        <Storyboard x:Name="ShowStackPanel">
                                            <DoubleAnimation
                         Storyboard.TargetName="NavPanel"
                         Storyboard.TargetProperty="Width"
                         BeginTime="0:0:0"
                         From="65" To="230"
                         Duration="0:0:0.3">
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ToggleButton.Triggers>
                        </ToggleButton>
                    </Grid>
                    <ListView x:Name="LV" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionChanged="ListViewItem_Selected">
                        <!-- Asignaturas -->
                        <ListViewItem x:Name="Asignaturas" HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="230">
                                <Image Source="pack://application:,,,/View/IconPanelEmpleado/libros.png" Stretch="Fill" Margin="12,0,0,0" Height="25" Width="25"/>
                                <TextBlock Text="Asignaturas" FontSize="15" Foreground="#005187" Margin="25,0,0,0"/>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_Asignaturas"
                            Content="Asignaturas"
                            Style="{StaticResource PropertiesToolTip}"/>
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!-- Gestion Calificaciones-->
                        <ListViewItem  x:Name="GtCalificaciones" HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="230">
                                <Image Source="pack://application:,,,/View/IconPanelEmpleado/calificaciones.png" Stretch="Fill" Margin="12,0,0,0" Height="35" Width="35"/>
                                <TextBlock Text="Calificaciones" FontSize="15" Foreground="#005187" Margin="15,0,0,0"/>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_GtCalificaciones"
                            Content="Calificaciones"
                            Style="{StaticResource PropertiesToolTip}"/>
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!-- Horario de Clases -->
                        <ListViewItem x:Name="HClases" HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter" >
                            <StackPanel Orientation="Horizontal" Width="230">
                                <Image Source="pack://application:,,,/View/IconPanelEmpleado/calendario.png" Stretch="Fill" Margin="12,0,0,0" Height="35" Width="35"/>
                                <TextBlock Text="Horario de Clases" FontSize="15" Foreground="#005187" Margin="15,0,0,0"/>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_HorarioClases"
                            Content="Horario de Clases"
                            Style="{StaticResource PropertiesToolTip}" Width="180"/>
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!-- Reportes -->
                        <ListViewItem x:Name="Reportes" HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter" >
                            <StackPanel Orientation="Horizontal" Width="230">
                                <Image Source="pack://application:,,,/View/IconPanelEmpleado/reporte.png" Stretch="Fill" Margin="12,0,0,0" Height="35" Width="35"/>
                                <TextBlock Text="Reportes" FontSize="15" Foreground="#005187" Margin="15,0,0,0"/>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_Reportes"
                            Content="Reportes"
                            Style="{StaticResource PropertiesToolTip}"/>
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!-- Estilos para los elementos dentro de la Lista -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border x:Name="Bd" Height="50" BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"
                                                 Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Border>

                                            <ControlTemplate.Triggers>

                                                <MultiTrigger>

                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>

                                                    <Setter Property="Background"
                                                            TargetName="Bd"
                                                            Value="#FFB0C4DE"/>

                                                    <Setter Property="BorderBrush"
                                                            TargetName="Bd"
                                                            Value="#FFB0C4DE"/>

                                                </MultiTrigger>

                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Ventana Sobrepuesta de Datos Personales -->
        <Grid Grid.ColumnSpan="2" Grid.RowSpan="2" Width="80000" x:Name="ModelOverlay" Background="#80000000" Visibility="Collapsed" HorizontalAlignment="Center">
            <Border Width="400" Height="400" Background="White" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="Closepanel" Grid.Row="0" Height="40" Width="40" Margin="145,3,11,0" Grid.Column="1" VerticalAlignment="Top" Click="Closepanel_Click"
                          Style="{StaticResource CloseButton}">
                        <Button.Background>
                            <ImageBrush ImageSource="pack://application:,,,/View/IconPanelEmpleado/marca-x.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Datos Personales" FontSize="20" HorizontalAlignment="Center" 
                               FontStyle="Italic" Foreground="#011c40" FontWeight="Bold"/>

                    <TextBlock Grid.Row="1" Text="Fecha de Nacimiento:" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#023859" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Text="CURP:" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#023859" FontWeight="Bold"/>
                    <TextBlock Grid.Row="3" Text="Telefono Personal:" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#023859" FontWeight="Bold"/>
                    <TextBlock Grid.Row="4" Text="Telefono de Contacto:" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#023859" FontWeight="Bold"/>
                    <TextBlock Grid.Row="5" Text="Correo Electronico:" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#023859" FontWeight="Bold"/>
                    <TextBlock Grid.Row="6" Text="Tipo de Empleado:" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#023859" FontWeight="Bold"/>

                    <TextBlock Grid.Row="1" x:Name ="DtFechanacimento" Grid.Column="1"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#316C90" FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" x:Name ="DtCurp" Grid.Column="1"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#316C90" FontWeight="Bold"/>
                    <TextBlock Grid.Row="3" x:Name ="DtTelefonoPersonal" Grid.Column="1"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#316C90" FontWeight="Bold"/>
                    <TextBlock Grid.Row="4" x:Name ="DtContacto" Grid.Column="1"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#316C90" FontWeight="Bold"/>
                    <TextBlock Grid.Row="5" x:Name ="DtCorreoElectronica" Grid.Column="1"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#316C90" FontWeight="Bold"/>
                    <TextBlock Grid.Row="6" x:Name ="DtTipoEmpleado" Grid.Column="1"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#316C90" FontWeight="Bold"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
