<Page x:Class="controlescolar.PageHorario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:controlescolar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageHorario"
      Background="White">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock FontSize="20" FontWeight="Bold" Text="🗓️ Horario Semestral"/>
            </StackPanel>

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Hora" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Lun" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Mar" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Mie" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Jue" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Text="Vie" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="6" Text="Sab" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="7" Text="Dom" FontWeight="Bold" HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="07:00" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="08:00" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="09:00" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="10:00" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="5" Grid.Column="0" Text="11:00" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="6" Grid.Column="0" Text="12:00" VerticalAlignment="Center"/>

                <Border x:Name="materia1" Grid.Row="1" Grid.Column="1" Background="#fef9c3" Margin="5" CornerRadius="5">
                    <StackPanel Margin="5">
                        <TextBlock Text="Contabilidad" FontWeight="Bold"/>
                        <TextBlock Text="Aula: ..."/>
                        <TextBlock Text="Paquete: IS1"/>
                        <TextBlock Text="07:00-08:00"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="2" Background="#fef9c3" Margin="5" CornerRadius="5">
                    <StackPanel Margin="5">
                        <TextBlock Text="Conta" FontWeight="Bold"/>
                        <TextBlock Text="Aula: ..."/>
                        <TextBlock Text="Paquete: ...."/>
                        <TextBlock Text="07:00-08:00"/>
                    </StackPanel>
                </Border>
                <Border x:Name="materia2" Grid.Row="2" Grid.Column="1" Background="#fbcfe8" Margin="5" CornerRadius="5">
                    <StackPanel Margin="5">
                        <TextBlock Text="Calculo" FontWeight="Bold"/>
                        <TextBlock Text="Aula: ..."/>
                        <TextBlock Text="Paquete: ...."/>
                        <TextBlock Text="08:00-09:00"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="5" Grid.Column="6" Background="#ddd6fe" Margin="5" CornerRadius="5">
                    <StackPanel Margin="5">
                        <TextBlock Text="Actividad extraescolar" FontWeight="Bold"/>
                        <TextBlock Text="Aula: ....."/>
                        <TextBlock Text="11:00-12:00"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
