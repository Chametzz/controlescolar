<Window x:Class="controlescolar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controlescolar"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanMinimize"
        Title="LoginAlumno" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE8F5E9" Offset="0"/>
                <GradientStop Color="#FFC8E6C9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#FF2E7D32" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBlock Text="CONTROL ESCOLAR" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"
                           FontFamily="Arial"/>
            </StackPanel>
        </Border>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="1000">
            <TextBlock Text="Seleccione su perfil:" 
                       FontSize="20" 
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"
                       Foreground="#FF1B5E20"
                       FontWeight="SemiBold"/>

            <UniformGrid Columns="3" HorizontalAlignment="Center">

                <Button x:Name="BtnAlumno" Tag="BtnPantAlumno" Style="{StaticResource MenuButtonStyle}" Click="BtnAlumno_Click">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Recursos/student-icon.png" Width="80" Height="80"/>
                        <TextBlock Text="ALUMNO" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   Foreground="#FF1B5E20"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnDocente" Tag="BtnPantDocente" Style="{StaticResource MenuButtonStyle}" Click="BtnDocente_Click">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Recursos/teacher-icon.png" Width="80" Height="80"/>
                        <TextBlock Text="DOCENTE" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   Foreground="#FF1B5E20"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnAdministracion" Tag="BtnPantAdmon" Style="{StaticResource MenuButtonStyle}" Click="BtnAdmon_Click">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Recursos/admin-icon.png" Width="80" Height="80"/>
                        <TextBlock Text="ADMINISTRACIÓN" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   Foreground="#FF1B5E20"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </StackPanel>

        <TextBlock Text="Copyright © 2024 by Control Escolar " 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,20"
                   Foreground="#FF2E7D32"
                   FontStyle="Italic"/>
    </Grid>
</Window>
